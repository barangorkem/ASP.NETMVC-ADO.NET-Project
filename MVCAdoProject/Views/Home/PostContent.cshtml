@model MVCAdoProject.Models.Posts
@{
    ViewBag.Title = "PostContent";
}


    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">@Model.PostTitle</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="#">Start Bootstrap</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on January 1, 2018 at 12:00 PM</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">@Model.PostContent</p>

            
          
            <hr>
            <div id="GetComments">
                @Html.Action("GetComments", "Home", new { PostId = Model.PostId.ToString() })
            </div>
           

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Web Design</a>
                                </li>
                                <li>
                                    <a href="#">HTML</a>
                                </li>
                                <li>
                                    <a href="#">Freebies</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">JavaScript</a>
                                </li>
                                <li>
                                    <a href="#">CSS</a>
                                </li>
                                <li>
                                    <a href="#">Tutorials</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                    You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->
<script>
    function doComment()
    {
        debugger
      var commentData = {
            CommentContent: document.getElementById("CommentContent").value,
            PostId:@Model.PostId
};
        
        $.ajax({
            url: '/Home/DoComment', // try to use Url Helper when possible
            type: 'POST', // use Get for [HttpGet] action or POST for [HttpPost]
            //contentType: 'application/json', not needed
            //dataType: 'jsonp', jsonp is for sending to a site other than the current one.. 
            data: JSON.stringify(commentData), // no need to stringify
            success: function (result) {
                debugger
                
                if (result == "True") {
                    debugger
                    $.ajax({
                      
                        url: "/Home/GetComments",
                        method: "GET",
                        contentType: "application/json",
                        data: { PostId: @Model.PostId },
                        success: function (response) {
                            debugger

                            document.getElementById("GetComments").innerHTML = response;

                        },
                        error: function (response) {
                            debugger
                            alert("error!");  //
                        }
                    });
                } else {
                    $QuickLoginErrors.text(result);
                }
            },
            contentType: 'application/json'
        });
    }
</script>


